---
import octocat from '@assets/octocat.svg?raw'
---

<nav class="w-full py-6 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col items-center space-y-4">
      <div class="flex items-center space-x-3">
        <img src="/favicon.ico" alt="GOL Logo" width="40" class="rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-500 to-purple-600 bg-clip-text text-transparent">
          GOL
        </h1>
      </div>
    </div>

    <div class="absolute top-6 right-6">
      <a
        class="inline-block p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200"
        href="https://github.com/kevincobain2000/gol"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Fragment set:html={octocat} />
      </a>
    </div>
  </div>
</nav>

<style>
  nav {
    position: relative;
  }
</style>
